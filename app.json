{
  "expo": {
    "name": "reeplay",
    "slug": "reeplay",
    "version": "1.0.0",
    "icon": "./assets/icon.png",
    "orientation": "portrait",
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["assets/*"],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSFaceIDUsageDescription": "Allow $(REEPLAY) to use Face ID."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.nainkhaskheli.reeplay",
      "permissions": [
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow $(REEPLAY) to use Face ID."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "2620abf4-e22a-4e19-b85d-a53fce454f01"
      }
    }
  }
}
